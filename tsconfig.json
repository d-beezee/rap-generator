{
  "ts-node": {
    "files": true
  },
  "files": [
    "src/index.ts",
    "src/index.d.ts"
  ],
  "compilerOptions": {
    "inlineSourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "outDir": "./dist",
    "downlevelIteration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@src/*": [
        "src/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "incremental": true,
    "module": "esnext"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
